<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.ColumnConstraints?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="top_center" style="-fx-border-color: blue; -fx-border-width: 3" hgap="10" vgap="10"
          >
    <columnConstraints>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
    </columnConstraints>
    <Label text = "Begin Analysis of The Raven?" textFill="blueviolet" GridPane.halignment="LEFT" GridPane.columnIndex="1" GridPane.columnSpan="3" >
        <font>
            <Font name="Arial bold" size="30"/>
        </font>
    </Label>
    <padding>
        <Insets top="125"/>
    </padding>
    <Button text="Start" prefWidth="100" GridPane.rowIndex="3" GridPane.columnIndex="1"
    GridPane.halignment="RIGHT" />
    <Button text="Quit" prefWidth="100" GridPane.rowIndex="3" GridPane.columnIndex="2" onAction="#onButtonClicked"/>

</GridPane>